<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>multimedia</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>home</welcome-file>
    <welcome-file>./jsp/index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>multimedia</param-value>
    </init-param>    
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>image</servlet-name>
    <jsp-file>/jsp/images.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>image</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetSessionDetails</servlet-name>
    <servlet-class>multimedia.session.GetSessionDetails</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetSessionDetails</servlet-name>
    <url-pattern>/getSessionDetails</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>uploadimage</servlet-name>
    <servlet-class>multimedia.image.UploadImage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadimage</servlet-name>
    <url-pattern>/UploadImage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>uploadprofilepic</servlet-name>
    <servlet-class>multimedia.registration.UploadProfilePic</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadprofilepic</servlet-name>
    <url-pattern>/uploadProfilePic</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>register</servlet-name>
    <jsp-file>/jsp/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>usersettings</servlet-name>
    <jsp-file>/jsp/usersettings.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>usersettings</servlet-name>
    <url-pattern>/usersettings</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>session</filter-name>
    <filter-class>multimedia.session.SessionCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>session</filter-name>
    <url-pattern>/resources/image/*</url-pattern>
    <url-pattern>/UploadImage</url-pattern>
    <url-pattern>/home</url-pattern>
    <url-pattern>/profile</url-pattern>
    <url-pattern>/usersettings</url-pattern>
    <url-pattern>/uploadProfilePic</url-pattern>
  </filter-mapping>
</web-app>